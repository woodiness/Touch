<Application
    x:Class="Touch.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Touch.Converters"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourceDictionaries/ColorDictionary.xaml" />
                <ResourceDictionary Source="ResourceDictionaries/DimentionDictionary.xaml" />
                <ResourceDictionary Source="ResourceDictionaries/Mdl2.xaml" />
                <ResourceDictionary Source="ResourceDictionaries/StyleDictionary.xaml" />
                <ResourceDictionary Source="ResourceDictionaries/TemplateDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:BoolToVisible x:Key="BoolToVisible" />
        </ResourceDictionary>
    </Application.Resources>

</Application>