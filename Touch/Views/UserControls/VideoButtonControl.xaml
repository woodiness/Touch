<UserControl
    x:Class="Touch.Views.UserControls.VideoButtonControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:Name="RootGrid" Background="#80000000">
        <Button x:Name="PlayButton" Height="96" Width="96" Visibility="Collapsed" HorizontalAlignment="Center"
                VerticalAlignment="Center" Style="{StaticResource ListButtonStyle}">
            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="{StaticResource Play}"
                      Foreground="White" FontSize="56" />
            <ToolTipService.ToolTip>
                <ToolTip x:Uid="Play" />
            </ToolTipService.ToolTip>
        </Button>
        <Button x:Name="ReplayButton" Height="96" Width="96" Visibility="Collapsed" HorizontalAlignment="Center"
                VerticalAlignment="Center" Style="{StaticResource ListButtonStyle}">
            <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="{StaticResource Refresh}"
                      Foreground="White" FontSize="56" />
            <ToolTipService.ToolTip>
                <ToolTip x:Uid="Replay" />
            </ToolTipService.ToolTip>
        </Button>
    </Grid>
</UserControl>